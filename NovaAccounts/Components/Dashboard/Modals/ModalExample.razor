<div class="row mb-4">
    <!-- Example 3: Full Screen Modal -->
    <div class="col-md-6">
        <h4>3. Default Screen Modal</h4>
        <ReusableModal Title="Default Screen Dashboard"
                      TriggerButtonText="Full Screen View"
                      TriggerButtonClass="btn btn-warning"
                      ShowTriggerButton="true"
                      Size="ModalSize.FullScreenSmDown"
                      
                      HeaderClass="bg-dark text-white"
                      TitleFontSize="2rem"
                      TitleColor="#ffffff"
                      BodyFontSize="1rem"
                      BodyStyle="padding: 2rem;">
            <BodyContent>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <h3>Dashboard Overview</h3>
                            <p>This modal takes up the entire screen, perfect for detailed forms or dashboards.</p>
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-md-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Total Users</h5>
                                    <p class="card-text display-4">1,234</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Revenue</h5>
                                    <p class="card-text display-4">₵45K</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Orders</h5>
                                    <p class="card-text display-4">567</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Products</h5>
                                    <p class="card-text display-4">89</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-12">
                            <h4>Recent Activity</h4>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Time</th>
                                            <th>User</th>
                                            <th>Action</th>
                                            <th>Details</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < 10; i++)
                                        {
                                            <tr>
                                                <td>@DateTime.Now.AddMinutes(-i*5).ToString("HH:mm")</td>
                                                <td>User @(i + 1)</td>
                                                <td>@(i % 2 == 0 ? "Login" : "Purchase")</td>
                                                <td>@(i % 2 == 0 ? "Successful login" : $"Bought product {i + 1}")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </BodyContent>
        </ReusableModal>
    </div>

    <!-- Example 4: Custom Header Colors -->
    <div class="col-md-6">
        <h4>4. Colored Header Modal</h4>
        <ReusableModal Title="Important Notice"
                      TriggerButtonText="Show Notice"
                      TriggerButtonClass="btn btn-danger"
                      ShowTriggerButton="true"
                      Size="ModalSize.Default"
                      HeaderClass="bg-danger text-white"
                      TitleFontSize="1.3rem"
                      TitleColor="#ffffff"
                      BodyFontSize="1rem"
                      BodyColor="#dc3545"
                      SaveButtonClass="btn btn-danger"
                      CancelButtonClass="btn btn-outline-secondary">
            <BodyContent>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Warning!</strong> This action cannot be undone.
                </div>
                <p>Please read the terms and conditions carefully before proceeding.</p>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="termsCheck">
                    <label class="form-check-label" for="termsCheck">
                        I agree to the terms and conditions
                    </label>
                </div>
            </BodyContent>
        </ReusableModal>
    </div>
</div>

<!-- Example 5: Responsive Fullscreen -->
<div class="row mb-4">
    <div class="col-md-12">
        <h4>5. Responsive Fullscreen (Fullscreen on mobile only)</h4>
        <ReusableModal Title="Responsive Form"
                      TriggerButtonText="Mobile Fullscreen"
                      TriggerButtonClass="btn btn-info"
                      ShowTriggerButton="true"
                      Size="ModalSize.FullScreenMdDown"
                      TitleFontSize="1.4rem"
                      TitleColor="#17a2b8"
                      BodyFontSize="1rem">
            <BodyContent>
                <p>This modal will be fullscreen on tablets and mobile devices, but normal size on desktop.</p>
                
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" />
                </div>
                
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" />
                </div>
                
                <div class="form-group">
                    <label>Message</label>
                    <textarea class="form-control" rows="4"></textarea>
                </div>
            </BodyContent>
        </ReusableModal>
    </div>
</div>

