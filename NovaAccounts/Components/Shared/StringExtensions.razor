@code {
    public static string TruncateWithTooltip(string text)
    {
        if (string.IsNullOrEmpty(text))
            return text;

        int maxLength = text.ToLower().Contains("m") ? 11 : 13;
        
        if (text.Length >= 14)
        {
            return $"<span class='tooltips' data-container='body' data-placement='bottom' data-original-title='{text}'>{text.Substring(0, maxLength)}...</span>";
        }
        
        return text;
    }
}